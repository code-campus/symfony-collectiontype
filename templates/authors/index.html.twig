{% extends 'base.html.twig' %}

{% set title = "Auteurs (index)" %}
{% block title title%}

{% block body %}
<div class="container">

    <div class="page-header">
        <h1>{{ title }}</h1>
    </div>

    <div>
        <a href="{{ path('authors:create') }}">Ajouter un auteur</a>
    </div>

    {% for author in authors %}
        <div>
            {{ author.title }} (
                <a href="{{ path('authors:read', {'id': author.id}) }}">details</a>  
                <a href="{{ path('authors:update', {'id': author.id}) }}">modifier</a>  
                <a href="{{ path('authors:delete', {'id': author.id}) }}">supprimer</a>  
            )
        </div>
    {% else %}
        <div class="alert alert-warning">
            Il n'y Ã  aucun auteur.
        </div>
    {% endfor %}
</div>
{% endblock %}
